<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{DATE} %c{5}:%L %m%n" />
		</Console>
	</Appenders>

	<Loggers>
		<Root level="info" includeLocation="true">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>